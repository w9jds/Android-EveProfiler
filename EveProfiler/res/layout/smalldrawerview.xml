<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey" >

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/MailButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/drawer_mail"
            android:onClick="onDrawerButtonClicked"
            android:enabled="true"
            android:clickable="true"/>

        <ImageButton
            android:id="@+id/AssetsButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/drawer_assets"
            android:onClick="onDrawerButtonClicked"
            android:enabled="true"
            android:clickable="true"/>

        <ImageButton
            android:id="@+id/WalletButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/drawer_wallet"
            android:onClick="onDrawerButtonClicked"
            android:enabled="true"
            android:clickable="true"/>

    </LinearLayout>

</RelativeLayout>