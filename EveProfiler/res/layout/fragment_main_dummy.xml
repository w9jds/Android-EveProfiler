<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$DummySectionFragment" >

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:textColor="@android:color/primary_text_dark">
        
        <ImageView
            android:id="@+id/CapsuleerPortrait"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" android:scaleType="fitCenter"/>

        <GridLayout
            android:id="@+id/alliancecorp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:columnCount="3"
            android:rowCount="2"
            tools:targetApi="14" >

            <ImageView
                android:id="@+id/corpPic"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_rowSpan="2"
                android:layout_column="0"
                android:layout_gravity="center" android:scaleType="fitCenter"/>

            <ImageView
                android:id="@+id/alliancePic"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_rowSpan="2" android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/CorpName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_row="0"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="15sp" android:textStyle="bold"/>

            <TextView
                android:id="@+id/allianceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_row="1"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="15sp"
                android:textStyle="bold"/>


		</GridLayout>

        <GridLayout
            android:id="@+id/Stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:alignmentMode="alignBounds"
            android:columnCount="2"
            android:rowCount="7"
            tools:targetApi="14" >

            <TextView
                android:id="@+id/LocationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_marginRight="15dp"
                android:text="@string/LocationLabel"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_margin="5dp"
                android:layout_row="0"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/ActiveShipLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_gravity="left"
                android:layout_marginRight="15dp"
                android:text="@string/ShipLabel"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ActiveShipType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_row="1"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/ActiveShipName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_row="2"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/SkillsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:layout_gravity="left"
                android:layout_marginRight="15dp"
                android:text="@string/SkillsLabel"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/SkillPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="3"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/Training"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_row="4"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/WealthLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="5"
                android:layout_gravity="left"
                android:layout_marginRight="15dp"
                android:text="@string/WealthLabel"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/WealthIsk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_margin="5dp"
                android:layout_row="5"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/SSLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_marginRight="15dp"
                android:layout_row="6"
                android:singleLine="false"
                android:text="@string/SecStatus"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/SecStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_margin="5dp"
                android:layout_row="6"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="15sp" />

        </GridLayout>

	</LinearLayout>

</RelativeLayout>