<?xml version="1.0" encoding="UTF-8"?>
<project name="module_slidemenu" default="compile.module.slidemenu">
  <dirname property="module.slidemenu.basedir" file="${ant.file.module_slidemenu}"/>
  
  <property name="module.jdk.home.slidemenu" value="${jdk.home.android_4.2.2}"/>
  <property name="module.jdk.bin.slidemenu" value="${jdk.bin.android_4.2.2}"/>
  <property name="module.jdk.classpath.slidemenu" value="jdk.classpath.android_4.2.2"/>
  
  <property name="compiler.args.slidemenu" value="${compiler.args}"/>
  
  <property name="slidemenu.output.dir" value="${module.slidemenu.basedir}/../out/production/SlideMenu"/>
  <property name="slidemenu.testoutput.dir" value="${module.slidemenu.basedir}/../out/test/SlideMenu"/>
  
  <path id="slidemenu.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="slidemenu.module.production.classpath">
    <path refid="${module.jdk.classpath.slidemenu}"/>
    <path refid="library.android-support-v41.classpath"/>
    <path refid="library.android-support-v4.classpath"/>
  </path>
  
  <path id="slidemenu.runtime.production.module.classpath">
    <pathelement location="${slidemenu.output.dir}"/>
    <path refid="library.android-support-v41.classpath"/>
    <path refid="library.android-support-v4.classpath"/>
  </path>
  
  <path id="slidemenu.module.classpath">
    <path refid="${module.jdk.classpath.slidemenu}"/>
    <pathelement location="${slidemenu.output.dir}"/>
    <path refid="library.android-support-v41.classpath"/>
    <path refid="library.android-support-v4.classpath"/>
  </path>
  
  <path id="slidemenu.runtime.module.classpath">
    <pathelement location="${slidemenu.testoutput.dir}"/>
    <pathelement location="${slidemenu.output.dir}"/>
    <path refid="library.android-support-v41.classpath"/>
    <path refid="library.android-support-v4.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.slidemenu">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.slidemenu">
    <patternset refid="excluded.from.module.slidemenu"/>
  </patternset>
  
  <path id="slidemenu.module.sourcepath">
    <dirset dir="${module.slidemenu.basedir}">
      <include name="src"/>
      <include name="gen"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.slidemenu" depends="compile.module.slidemenu.production,compile.module.slidemenu.tests" description="Compile module SlideMenu"/>
  
  <target name="compile.module.slidemenu.production" depends="register.custom.compilers" description="Compile module SlideMenu; production classes">
    <mkdir dir="${slidemenu.output.dir}"/>
    <javac2 destdir="${slidemenu.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.slidemenu}/javac">
      <compilerarg line="${compiler.args.slidemenu}"/>
      <bootclasspath refid="slidemenu.module.bootclasspath"/>
      <classpath refid="slidemenu.module.production.classpath"/>
      <src refid="slidemenu.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.slidemenu"/>
    </javac2>
    
    <copy todir="${slidemenu.output.dir}">
      <fileset dir="${module.slidemenu.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.slidemenu.basedir}/gen">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.slidemenu.tests" depends="register.custom.compilers,compile.module.slidemenu.production" description="compile module SlideMenu; test classes" unless="skip.tests"/>
  
  <target name="clean.module.slidemenu" description="cleanup module">
    <delete dir="${slidemenu.output.dir}"/>
    <delete dir="${slidemenu.testoutput.dir}"/>
  </target>
</project>